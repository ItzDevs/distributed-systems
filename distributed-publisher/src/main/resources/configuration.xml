<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    <bean id="kafkaPublisher" class="dev.distributed.publisher.kafka.KafkaPublisher">
        <constructor-arg name="producerFactory">
            <bean class="dev.distributed.publisher.kafka.DefaultKafkaPublisher">
                <constructor-arg name="configs">
                    <map>
                        <entry key="bootstrap.servers" value="77fb11ac7a113cb45f6a39dca2390cfc79c87eec78ea6bf488e218549f20b78d:9092"/>
                        <entry key="compression.type" value="gzip" />
                    </map>
                </constructor-arg>
            </bean>
        </constructor-arg>
    </bean>
</beans>

